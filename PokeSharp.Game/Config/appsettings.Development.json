{
  "Game": {
    "Window": {
      "Width": 960,
      "Height": 640,
      "IsMouseVisible": true,
      "Title": "PokeSharp - Development"
    },
    "Initialization": {
      "AssetRoot": "Assets",
      "DataPath": "Assets/Data",
      "ContentRoot": "Content",
      "InitialMap": "littleroot_town",
      "PlayerSpawnX": 10,
      "PlayerSpawnY": 8
    }
  },
  "DebugConsole": {
    "Size": "Full",
    "FontSize": 16,
    "SyntaxHighlightingEnabled": true,
    "AutoCompleteEnabled": true,
    "PersistHistory": true,
    "LoggingEnabled": true,
    "MinimumLogLevel": "Debug",
    "AutoLoadStartupScript": true,
    "StartupScriptName": "startup.csx"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.EntityFrameworkCore": "Information",
        "System": "Information",
        "PokeSharp.Engine.Systems": "Debug",
        "PokeSharp.Engine.Scenes": "Debug",
        "PokeSharp.Game": "Debug",
        "PokeSharp.Engine.Rendering": "Debug",
        "PokeSharp.Game.Scripting": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff}] [{Level:u5}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/pokesharp-dev-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 3,
          "fileSizeLimitBytes": 52428800,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{ThreadId}] {SourceContext}: {Message:lj}{NewLine}{Exception}",
          "shared": false
        }
      }
    ]
  }
}
