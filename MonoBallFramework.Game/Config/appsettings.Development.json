{
  "Game": {
    "Window": {
      "Width": 1280,
      "Height": 800,
      "IsMouseVisible": true,
      "Title": "MonoBall Framework - Development"
    },
    "Initialization": {
      "AssetRoot": "Assets",
      "DataPath": "Assets/Data",
      "ContentRoot": "Content",
      "InitialMap": "littleroot_town",
      "PlayerSpawnX": 10,
      "PlayerSpawnY": 8
    }
  },
  "DebugConsole": {
    "Size": "Full",
    "Theme": "pokeball",
    "FontSize": 16,
    "SyntaxHighlightingEnabled": true,
    "AutoCompleteEnabled": true,
    "PersistHistory": true,
    "LoggingEnabled": true,
    "MinimumLogLevel": "Debug",
    "AutoLoadStartupScript": true,
    "StartupScriptName": "startup.csx"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.EntityFrameworkCore": "Information",
        "System": "Information",
        "MonoBall Framework.Engine.Systems": "Debug",
        "MonoBall Framework.Engine.Scenes": "Debug",
        "MonoBall Framework.Game": "Debug",
        "MonoBall Framework.Engine.Rendering": "Debug",
        "MonoBall Framework.Game.Scripting": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff}] [{Level:u5}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/MonoBall Framework-dev-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 3,
          "fileSizeLimitBytes": 52428800,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{ThreadId}] {SourceContext}: {Message:lj}{NewLine}{Exception}",
          "shared": false
        }
      }
    ]
  }
}
