{
  "Game": {
    "Window": {
      "Width": 1280,
      "Height": 800,
      "IsMouseVisible": true,
      "Title": "MonoBall Framework"
    },
    "Initialization": {
      "AssetRoot": "Assets",
      "DataPath": "Assets/Data",
      "ContentRoot": "Content",
      "InitialMap": "base:map:hoenn/littleroot_town",
      "PlayerSpawnX": 10,
      "PlayerSpawnY": 8
    }
  },
  "DebugConsole": {
    "Size": "Medium",
    "Theme": "pokeball",
    "FontSize": 16,
    "SyntaxHighlightingEnabled": true,
    "AutoCompleteEnabled": true,
    "PersistHistory": true,
    "LoggingEnabled": true,
    "MinimumLogLevel": "Debug",
    "AutoLoadStartupScript": true,
    "StartupScriptName": "startup.csx"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Spectre",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Async"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Spectre",
              "Args": {
                "outputTemplate": "[{Timestamp:HH:mm:ss.fff}] [{Level:u5}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
              }
            }
          ]
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "logs/MonoBall Framework-.log",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 7,
                "fileSizeLimitBytes": 10485760,
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{ThreadId}] {SourceContext}: {Message:lj}{NewLine}{Exception}",
                "shared": false
              }
            }
          ]
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithThreadId",
      "WithMachineName"
    ],
    "Properties": {
      "Application": "MonoBall Framework"
    }
  }
}
